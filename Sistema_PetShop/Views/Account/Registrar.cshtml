
@model Usuario

@{
    ViewData["Title"] = "Registrar";
}

<p class="text-center">@ViewBag.Message</p>

<form class="mt-5 p-3" style="width:400px; margin:auto; background-color: #BC8F8F" asp-controller="Account" asp-action="Registrar" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <h3 class="text-center text-light">Registrar Usuario</h3>

    <div class="form-group">
        <label asp-for="Username" class="text-left text-light">Usuario</label>
        <input asp-for="Username" type="text" class="form-control" id="exampleInputEmail1" placeholder="Informo o nome de usuario">
        <span asp-validation-for="Username" class="text-white"></span>

    </div>

    <div class="form-group">
        <label asp-for="Password" class="text-light">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Informe a senha">
        <span asp-validation-for="Password" class="text-white"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="text-light">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="exampleInputPassword1" placeholder="Informe o email">
        <span asp-validation-for="Email" class="text-white"></span>
    </div>

    <button type="submit" class="btn btn-success">Confirmar</button>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}