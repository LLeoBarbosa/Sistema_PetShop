@model Produto

<div class="col-4">

    <div class="img-thumbnail mb-2">

        <img height="300" src="@Model.ImagemProduto" class="img-rounded" />

        <div class="caption">

            <h3>
                <a class="text-black-50" asp-controller="Produto" asp-action="ExibirDetalhesDoProduto" asp-route-produtoId="@Model.ProdutoId">@Model.DescricaoCurta</a>
                                
            </h3>

            <p>@Model.DescricaoDetalhada</p>

            <h3>@Model.Preco.ToString("C")</h3>

            @*<p>

                  

                </p>*@

            @*<h3 class="pull-righ btn-info">@Model.Nome</h3>*@

            @*<p>@Model.Descricao</p>*@

            <div class="addToCart text-right">

                <p class="button">

                    <a class="btn btn-danger text-white" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinho"  asp-route-produtoId="@Model.ProdutoId">Adicionar ao Carrinho</a>

                </p>

            </div>

        </div>

    </div>

</div>
