
@model Cliente

@{
    ViewData["Title"] = "InserirCliente";
}


<h4 class="pt-2">Data: @ViewData["data"]</h4>

<h3 class="text-center pb-4">Preencha os campos</h3>

<form asp-action="GravarCliente" method="post">

    <div asp-validation-summary="ModelOnly"></div>

       
    <div class="form-row">

        <div class="form-group col-md-8">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" type="text" class="form-control">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="Cpf"></label>
            <input asp-for="Cpf" type="text" class="form-control">
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>

    </div> 

    <div class="form-row">

        <div class="form-group col-md-10">
            <label asp-for="Endereco"></label>
            <input asp-for="Endereco" type="text" class="form-control">
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>

        <div class="form-group col-md-2">
            <label asp-for="Cep"></label>
            <input asp-for="Cep" type="text" class="form-control">
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>


    </div>
    

    <div class="form-row">

        <div class="form-group col-md-8">
            <label asp-for="Cidade"></label>
            <input asp-for="Cidade" type="text" class="form-control">
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="Uf">UF</label>
            <input asp-for="Uf" type="text" class="form-control">
            <span asp-validation-for="Uf" class="text-danger"></span>
        </div>

        @*<div class="form-group col-md-4">
                <label for="inputEstado">Estado</label>
                <select id="inputEstado" class="form-control">
                    <option selected>Escolher...</option>
                    <option>...</option>
                </select>
            </div>*@

    </div>

    <div class="form-row">

        <div class="form-group col-md-2">
            <label asp-for="TelFixo"></label>
            <input asp-for="TelFixo" type="text" class="form-control">
            <span asp-validation-for="TelFixo" class="text-danger"></span>
        </div>

        <div class="form-group col-md-2">
            <label asp-for="TelMovel1">Telefone Móvel 1</label>
            <input asp-for="TelMovel1" type="text" class="form-control">
            <span asp-validation-for="TelMovel1" class="text-danger"></span>
        </div>

        <div class="form-group col-md-2">
            <label asp-for="TelMovel2">Telefone Móvel 2</label>
            <input asp-for="TelMovel2" type="text" class="form-control">
            <span asp-validation-for="TelMovel2" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="text" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>


    <div class="form-group">

        @*<div class="form-check">

                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    Clique em mim
                </label>

            </div>*@

    </div>

    <button type="submit" class="btn btn-primary">Prosseguir</button>

    @*<a class="btn btn-success">Prosseguir</a>*@

  @section Scripts{ 
      <partial name="_ValidationScriptsPartial" />
  }

</form>
